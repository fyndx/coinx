{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["drizzle/**/*", ".expo/**/*", ".tamagui/**/*"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["node_modules/*", "*.config.*", "*.json", "tsconfig.json"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["polyfill.ts"],
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
